<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_2dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12-12-1212" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_uri"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8dp"
        android:textSize="@dimen/_8sp"
        app:layout_constraintLeft_toRightOf="@id/tv_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="sasa" />

    <View
        android:layout_width="0px"
        android:layout_height="1px"
        app:layout_constraintTop_toBottomOf="@id/tv_uri"
        app:layout_constraintLeft_toLeftOf="@id/tv_uri"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#cbd2c1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_string"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8dp"
        android:textSize="@dimen/_8sp"
        app:layout_constraintLeft_toRightOf="@id/tv_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_uri"
        tools:text="sasa" />

    <View
        android:layout_width="0px"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/_2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#cbd2c1" />
</androidx.constraintlayout.widget.ConstraintLayout>